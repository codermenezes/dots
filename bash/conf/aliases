# make ls colorful
alias ls='ls -1 -G';
alias sl='ls';
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
# make grep colorful
alias grep='grep --color=auto -i'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
# set localhost alias
alias here="localhost"
# set move and copy to be verbose
alias mv="mv -v"
alias cp="cp -v"
alias vi="vim"
case `uname -s` in
 'Linux') if type -p gvim &>/dev/null; then alias vim="gvim"; fi ;;
 'Darwin') if type -p mvim &>/dev/null; then alias vim="mvim"; fi ;;
esac
alias v="vim"
alias g="git"
export GG='/Users/filipesperandio/gid-git-svn/gid'
alias gg='cd $GG'
alias br='cd /Users/filipesperandio/gid-git-svn/brazil-build'
