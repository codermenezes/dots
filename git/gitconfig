[user]
  name = Joao Vortmann
  email = jvortmann@gmail.com

[color]
  status = auto
  branch = auto
  log = auto
  commit = auto
  diff = auto
  interactive = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow
  local = green
  remote = cyan

[color "diff"]
  meta = yellow 
  frag = cyan 
  old = red
  new = green 

[color "status"]
  added = green
  changed = yellow
  untracked = blue

[core]
  excludesfile = ~/.gitignore
  pager = less -FRSX
  whitespace=fix,-indent-with-non-tab,trailing-space,space-before-tab,cr-at-eol

[diff]
  ignoreSubmodules = dirty

[alias]
  a = add
  aa = add --all
  alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t=> \\2/' | sort
  l = log
  lg = log --graph --pretty=format:'%C(yellow)%h %Cblue%aN %Cgreen%ar %Creset%s'
  ls = log --stat
  last = log -1 HEAD
  w = log --name-status #short whatchanged
  s = show
  d = diff
  ds = diff --staged
  st = status
  ss = status -s
  co = checkout
  cf = "!git ss | grep '[UD][UD]' --color"
  ccf = "!git cf | wc -l"
  br = branch
  px = push
  pl = pull
  r = remote
  unstage = reset HEAD --
  this = !git init && git add . && git commit -m \"Initial commit.\"
  t = !git this
  amend = !git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend
  x  = commit -m
  xa = commit -a -m
  ignore=!([ ! -e .gitignore ] && touch .gitignore) | echo $1 >>.gitignore
[heroku]
  account = personal
[push]
  default = simple
